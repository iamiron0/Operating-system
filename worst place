#include <stdio.h>

void main()
{
    int bsize[10], psize[10], bno, pno, flag[10], allocation[10], i, j;
    
    // Initialize flags and allocations
    for(i = 0; i < 10; i++) {
        flag[i] = 0;
        allocation[i] = -1;
    }
    
    // Get number of blocks
    printf("Enter number of blocks: ");
    scanf("%d", &bno);
    
    // Get block sizes
    printf("Enter sizes of the blocks: ");
    for(i = 0; i < bno; i++)
        scanf("%d", &bsize[i]);
    
    // Get number of processes
    printf("\nEnter number of processes: ");
    scanf("%d", &pno);
    
    // Get process sizes
    printf("Enter sizes of the processes: ");
    for(i = 0; i < pno; i++)
        scanf("%d", &psize[i]);
    
    // Allocate blocks using worst fit
    for(i = 0; i < pno; i++) {
        int worstplace = -1;
        
        // Find the block that best fits the process
        for(j = 0; j < bno; j++) {
            if(bsize[j] >= psize[i]) {
                if(worstplace == -1 || bsize[worstplace] < bsize[j]) {
                    worstplace = j;
                }
            }
        }
        
        // If a block was found, allocate it
        if(worstplace != -1) {
            allocation[i] = worstplace;
            bsize[worstplace] -= psize[i];  // Reduce the block size
        }
    }
    
    // Display the allocation results
    printf("\nProcess No.\tProcess Size\tBlock No.\n");
    for(i = 0; i < pno; i++) {
        printf("%d\t\t%d\t\t", i + 1, psize[i]);
        if(allocation[i] != -1)
            printf("%d\n", allocation[i] + 1);  // Output is 1-indexed
        else
            printf("Not allocated\n");
    }
}
