#include <stdio.h>
void main()
{
    int bsize[10], psize[10], bno, pno, flag[10], allocation[10], i, j, temp, lowest;
    
    // Initialize flags and allocations
    for(i = 0; i < 10; i++)
    {
        flag[i] = 0; // Block is initially free
        allocation[i] = -1; // No process is allocated yet
    }

    // Input number of blocks
    printf("Enter the number of blocks: ");
    scanf("%d", &bno);

    // Input block sizes
    printf("Enter the size of each block: \n");
    for(i = 0; i < bno; i++)
    {
        scanf("%d", &bsize[i]);
    }

    // Input number of processes
    printf("\nEnter the number of processes: ");
    scanf("%d", &pno);

    // Input process sizes
    printf("Enter the size of each process: \n");
    for(i = 0; i < pno; i++)
    {
        scanf("%d", &psize[i]);
    }

    // Process allocation
    for(i = 0; i < pno; i++)
    {
        lowest = 9999; // Set the initial "lowest" to a high number
        for(j = 0; j < bno; j++) // Loop through each block
        {
            // If block is not allocated and the block size is greater than or equal to the process size
            if(flag[j] != 1 && bsize[j] >= psize[i]) 
            {
                temp = bsize[j] - psize[i];
                if(temp < lowest) 
                {
                    allocation[i] = j; // Allocate this block to the process
                    lowest = temp; // Update the lowest space left
                }
            }
        }

        // Mark the block as occupied (flag = 1) if allocated
        if(allocation[i] != -1)
        {
            flag[allocation[i]] = 1; // Mark block as occupied
        }
    }

    // Output the allocation details
    printf("\nProcess No.\tProcess Size\tBlock No\n");
    for(i = 0; i < pno; i++)
    {
        printf("%d\t\t%d\t\t", i + 1, psize[i]);
        if(allocation[i] != -1)
        {
            printf("%d\n", allocation[i] + 1); // Print the allocated block number
        }
        else
        {
            printf("Not allocated\n"); // If not allocated
        }
    }
}
